<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-8 m-3">
            <div class="row">

                <div class="row" id="search-bar">
                    <div class="col-12">
                        <form action="/teachers/search">
                            <div class="input-group mb-3">
                                <input type="text" name="keyword" class="form-control" placeholder="請輸入關鍵字"
                                    aria-label="keyword" aria-describedby="search-button" value="{{keyword}}">
                                <div class="input-group-append">
                                    <button class="btn btn-outline-secondary" type="submit"
                                        id="search-button">搜尋</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>


                {{#each teacherInfos}}
                <div class="card m-2" style="max-width: 400px;">
                    <div class="row g-0">

                        <div class="col-md-3 d-flex align-items-center">
                            <a href="/teachers/{{this.id}}">
                                <img class="img-fluid rounded-start" src="{{this.User.image}}" alt="Card image cap">
                            </a>
                        </div>
                        <div class="col-md-9">
                            <div class="card-body">
                                <a href="/teachers/{{this.id}}">
                                    {{this.User.name}}
                                </a>
                                <p class="card-text">{{this.classIntroduce}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{#if pagination}}
                <nav class="mt-3" aria-label="page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item {{#ifCond pagination.currentPage 1}}disabled{{/ifCond}}">
                            <a class="page-link" href="/teachers?page={{pagination.prev}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        {{#each pagination.pages}}
                        {{#ifCond this ../pagination.currentPage}}
                        <li class="page-item active"><a class="page-link" href="#">{{this}}</a></li>
                        {{else}}
                        <li class="page-item">
                            <a class="page-link" href="/teachers?page={{this}}">{{this}}</a>
                        </li>
                        {{/ifCond}}
                        {{/each}}

                        <li
                            class="page-item {{#ifCond pagination.currentPage pagination.totalPage}}disabled{{/ifCond}}">
                            <a class="page-link" href="/teachers?page={{pagination.next}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>

                    </ul>
                </nav>
                {{/if}}
            </div>
        </div>
        <div class="col-md-3 m-3">
            <!-- 右邊版面的內容 -->
            <h3>學習排行榜</h3>
            <ul class="list-group">
                {{#each topLearnUsers}}
                <li class="list-group-item d-flex justify-content-between align-items-center mb-1">
                    <span>{{this.User.name}}</span>
                    <span class="badge bg-primary rounded-pill">{{this.totalDuration}} 分鐘</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>


</div>