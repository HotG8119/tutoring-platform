<div class="row">
    <div class="col-md-4">
        <img class="img-responsive center-block" src="{{user.image}}"
            style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;"
            onload="this.style.opacity=1;">
        <br>
        <h2>{{user.name}}</h2>
        <div>
            <h5>關於我</h5>
            <p>{{user.introduce}}</p>
        </div>
    </div>

    <div class="col-md-8">
        <div class="well">
            <ul class="list-unstyled">
                <li><strong>{{user.name}}</strong></li>
                <li>{{user.email}}</li>
            </ul>
            <p><a class="btn btn-outline-secondary" href="/teacher/{{user.id}}/edit">編輯課程資訊與時間</a></p>
        </div>
    </div>
</div>
<hr>


<a class="btn btn-outline-secondary mt-2" href="javascript:history.back()">Back</a>