<div class="mb-4 text-center">
    <h1 class="h3 font-weight-normal mb-3">修改課程資訊與時間</h1>
</div>
<form class="form-signup" action="/teacher/{{user.id}}?_method=PUT" method="POST" style="width: 100%;">
    <div class="form-row mb-3">
        <label class="form-label" for="classIntroduce">課程介紹</label>
        <textarea class="form-control" id="classIntroduce" name="classIntroduce" rows="3"
            required>{{teacherInfo.classIntroduce}}</textarea>
    </div>
    <div class="form-row mb-3">
        <label class="form-label" for="method">課程方式</label>
        <textarea class="form-control" id="method" name="method" rows="5">{{teacherInfo.method}}</textarea>
    </div>
    <div class="form-row mb-3">
        <label class="form-label" for="duration">課程時長</label>
        <select class="form-select" id="duration" name="duration" required>
            <option value="30" {{#ifCond teacherInfo.duration "30" }}selected{{/ifCond}}>30分鐘</option>
            <option value="60" {{#ifCond teacherInfo.duration "60" }}selected{{/ifCond}}>60分鐘</option>
        </select>
    </div>

    <div class="form-row mb-3">
        <label class="form-label" for="availableWeekdays">可預約時間：</label>
        <div class="d-inline-flex">
            {{#if weekdays}}
            {{#each weekdays}}
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday{{this.value}}" name="availableWeekdays"
                    value="{{this.value}}" {{#if this.checked}}checked{{/if}}>
                <label class="form-check-label" for="weekday{{this.value}}">{{this.label}}</label>
            </div>
            {{/each}}
            {{else}}
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday1" name="availableWeekdays" value="1">
                <label class="form-check-label" for="weekday1">星期一</label>
            </div>
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday2" name="availableWeekdays" value="2">
                <label class="form-check-label" for="weekday2">星期二</label>
            </div>
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday3" name="availableWeekdays" value="3">
                <label class="form-check-label" for="weekday3">星期三</label>
            </div>
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday4" name="availableWeekdays" value="4">
                <label class="form-check-label" for="weekday4">星期四</label>
            </div>
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday5" name="availableWeekdays" value="5">
                <label class="form-check-label" for="weekday5">星期五</label>
            </div>
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday6" name="availableWeekdays" value="6">
                <label class="form-check-label" for="weekday6">星期六</label>
            </div>
            <div class="form-check ms-3">
                <input class="form-check-input" type="checkbox" id="weekday7" name="availableWeekdays" value="7">
                <label class="form-check-label" for="weekday7">星期日</label>
            </div>
            {{/if}}
        </div>
    </div>

    <div class="form-row mb-3">
        <label class="form-label" for="classLink">課程視訊連結</label>
        <input type="text" id="classLink" name="classLink" class="form-control" value="{{teacherInfo.classLink}}"
            required>
    </div>
    <button class="btn btn-primary btn-block" type="submit">提出申請</button>
</form>