<header>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark px-4">
        <div class="container-fluid">
            {{#if user.isAdmin}}
            <a class="navbar-brand" href="/admin">英文家教媒合平台-Admin</a>
            {{else}}
            <a class="navbar-brand" href="/">英文家教媒合平台</a>
            {{/if}}
            {{#if user.isUser}}
            <a href="/users/{{user.id}}"><button class="btn btn-outline-success my-sm-0 my-2">個人資料</button></a>
            {{#if user.isTeacher}}
            <a href="/teacher/{{user.id}}"><button class="btn btn-outline-success my-sm-0 my-2">老師專區</button></a>
            {{else}}
            <a href="/users/{{user.id}}/becometeacher"><button
