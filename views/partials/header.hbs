<header>
    <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark px-4">
        <div class="container-fluid">
            {{#if user.isAdmin}}
            <a class="navbar-brand" href="/admin">英文家教媒合平台-Admin</a>
            {{else}}
            <a class="navbar-brand" href="/">英文家教媒合平台</a>
            {{/if}}


            {{#if user.isUser}}
            <ul class="navbar-nav ms-auto mb-2 mb-md-0">

                <li class="nav-item d-inline-flex align-items-center">
                    <a href="/users/{{user.id}}"><button class="btn btn-outline-success my-sm-0 my-2">{{
                            user.name
                            }}</button></a>
                </li>
                {{#if user.isTeacher}}
                <li class="nav-item d-inline-flex align-items-center">
                    <a href="/teacher/{{user.id}}"><button
                            class="btn btn-outline-success my-sm-0 my-2">老師專區</button></a>
                </li>
                {{else}}
                <li class="nav-item d-inline-flex align-items-center">
                    <a href="/users/{{user.id}}/becometeacher"><button
                            class="btn btn-outline-success my-sm-0 my-2">成為老師</button></a>
                </li>
                {{/if}}

            </ul>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">Logout</button></a>
                    </li>
                </ul>
            </div>
            {{/if}}
            {{#if user.isAdmin}}
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a href="/admin/logout"><button class="btn btn-outline-success my-sm-0 my-2">Admin
                                Logout</button></a>
                    </li>
                </ul>
            </div>
            {{/if}}
        </div>
    </nav>
</header>