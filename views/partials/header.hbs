            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                    <li class="nav-item mx-2 d-flex align-items-center" style="color: antiquewhite;font-size: 24px;">HI,
                        {{user.name}}
                    </li>
                    <li class="nav-item d-inline-flex align-items-center">
                        <a href="/logout"><button class="btn btn-outline-success my-sm-0 my-2">Logout</button></a>
                    </li>
                </ul>
            </div>
            {{/if}}
            {{#if user.isAdmin}}
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a href="/admin/logout"><button class="btn btn-outline-success my-sm-0 my-2">Admin
                                Logout</button></a>
                    </li>
                </ul>
